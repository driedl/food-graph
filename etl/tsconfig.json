{
    "extends": "../tsconfig.base.json",
    "compilerOptions": {
        "outDir": "./dist",
        "baseUrl": "./src",
        "lib": [
            "ES2022"
        ],
        "paths": {
            "@/*": [
                "./*"
            ],
            "@nutrition/shared": [
                "../../packages/shared/src"
            ],
            "@nutrition/config": [
                "../../packages/config/src"
            ]
        }
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "python"
    ]
}