{
    "name": "@nutrition/etl",
    "version": "0.0.0",
    "private": true,
    "type": "module",
    "scripts": {
        "build": "tsc -p tsconfig.json",
        "dev": "tsx watch src/pipeline/index.ts",
        "build:pipeline": "tsx src/pipeline/index.ts build",
        "validate": "tsx src/pipeline/index.ts --step=validate",
        "smoke-tests": "tsx src/pipeline/steps/smoke-tests.ts",
        "verify": "tsx src/pipeline/steps/verify.ts",
        "clean": "tsx src/scripts/clean.ts",
        "typecheck": "tsc -p tsconfig.json --noEmit",
        "lint": "eslint ."
    },
    "dependencies": {
        "@nutrition/shared": "workspace:*",
        "@nutrition/config": "workspace:*",
        "better-sqlite3": "^9.4.0",
        "chalk": "^5.3.0",
        "commander": "^12.0.0",
        "glob": "^10.3.10",
        "ora": "^8.0.1"
    },
    "devDependencies": {
        "@types/better-sqlite3": "^7.6.8",
        "@types/glob": "^9.0.0",
        "@types/node": "^20.11.30",
        "tsx": "^4.16.2",
        "typescript": "^5.6.2"
    }
}