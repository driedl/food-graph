{
  "name": "nutrition-graph-starter",
  "private": true,
  "packageManager": "pnpm@9.0.0",
  "scripts": {
    "dev": "turbo run dev --parallel",
    "dev:api": "turbo run dev --filter=@nutrition/api",
    "dev:web": "turbo run dev --filter=@nutrition/web",
    "build": "turbo run build",
    "lint": "turbo run lint && eslint .",
    "lint:fix": "eslint . --fix && prettier --write .",
    "typecheck": "turbo run typecheck",
    "etl:install": "cd etl && python3 -m pip install -e .",
    "etl:plan": "cd etl && python3 -m mise run --help",
    "etl:run": "cd etl && python3 -m mise run build --verbose --with-tests --in ../data/ontology --build ./build",
    "etl:clean": "cd etl && python3 -m mise clean --hard",
    "db:open": "sqlite3 etl/build/database/graph.dev.sqlite",
    "sql": "tsx scripts/run-sql.ts",
    "sql:repl": "tsx scripts/run-sql.ts --repl",
    "sync-db": "tsx scripts/sync-db.ts",
    "api:routes": "tsx scripts/print-trpc-routes.ts",
    "ag": "tsx scripts/aggregate/aggregate.ts",
    "ag:etl": "tsx scripts/aggregate/aggregate.ts --config etl",
    "ag:api": "tsx scripts/aggregate/aggregate.ts --config api",
    "stop": "./scripts/stop-all.sh",
    "stop:force": "./scripts/stop-all.sh --force",
    "stop:all-ports": "./scripts/stop-all.sh --all-ports",
    "stop:force-all-ports": "./scripts/stop-all.sh --force --all-ports",
    "check": "pnpm typecheck && pnpm lint"
  },
  "devDependencies": {
    "turbo": "^2.1.0",
    "tsx": "^4.20.6",
    "inquirer": "^9.2.12",
    "glob": "^10.3.10",
    "eslint": "^8.57.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "prettier": "^3.2.5",
    "archiver": "^7.0.1",
    "@types/archiver": "^6.0.2"
  }
}