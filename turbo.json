{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "dev": {
      "cache": false,
      "persistent": true
    },
    "build": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        "dist/**"
      ]
    },
    "lint": {
      "outputs": []
    },
    "typecheck": {
      "outputs": []
    },
    "etl:run": {
      "inputs": [
        "etl/**",
        "data/ontology/**"
      ],
      "outputs": [
        "etl/build/**"
      ]
    }
  },
  "globalDependencies": [
    "**/.env*"
  ]
}