{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "dev": {
      "cache": false,
      "persistent": true
    },
    "build": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        "dist/**"
      ]
    },
    "lint": {
      "outputs": []
    },
    "typecheck": {
      "outputs": []
    },
    "etl:build": {
      "outputs": [
        "etl/dist/**",
        "data/ontology/compiled/**"
      ]
    },
    "etl:validate": {
      "outputs": []
    },
    "etl:clean": {
      "outputs": []
    }
  },
  "globalDependencies": [
    "**/.env*"
  ]
}